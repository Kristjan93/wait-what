{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/semi": ["error", "never"],
    "curly": "error",
    "indent": "off",
    "@typescript-eslint/indent": ["error", 2],
    "quotes": ["error", "single"]
  }
}